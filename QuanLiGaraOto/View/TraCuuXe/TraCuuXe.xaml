<Page
    x:Class="QuanLiGaraOto.View.TraCuuXe.TraCuuXe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:QuanLiGaraOto.View.TraCuuXe"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TraCuuXe"
    Width="1536"
    Height="800"
    DataContext="{StaticResource TraCuuXeVM}"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Width="auto"
                    Orientation="Horizontal">
                    <!--  Search Box  -->
                    <Border
                        Height="57"
                        Margin="0,0,20,0"
                        Background="#FFF4F4"
                        BorderBrush="DarkGray"
                        BorderThickness="2"
                        CornerRadius="16">
                        <Grid>
                            <TextBox
                                x:Name="searchBox"
                                Width="300"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                materialDesign:HintAssist.Hint="Tìm kiếm"
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="17.6"
                                TextAlignment="Center">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding SearchStaff}" CommandParameter="{Binding ElementName=searchBox}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>

                            <Image
                                Width="50"
                                Height="50"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Source="/QuanLiGaraOto;component/Resources/Icon/Search.png" />

                        </Grid>
                    </Border>

                    <!--  Button Thêm  -->
                    <Button
                        Width="50"
                        Height="50"
                        Margin="0,0,30,0"
                        BorderThickness="0"
                        Command="{Binding OpenAddWindowCommand}"
                        CommandParameter="{Binding ElementName=staffPage}">
                        <Button.Background>
                            <ImageBrush ImageSource="/QuanLiCoffeeShop;component/Resources/Icon/AddCusBtn.png" />
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Page>
