<Page
    x:Class="QuanLiGaraOto.View.TraCuuXe.TraCuuXe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:QuanLiGaraOto.View.TraCuuXe"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TraCuuXe"
    Width="1536"
    Height="800"
    MinHeight="1000"
    MinWidth='500'
    DataContext="{StaticResource TraCuuXeVM}"
    mc:Ignorable="d">

    <Grid Background="#3F7B88">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!--  Search Box  -->
                    <Border
                        Grid.Column="0"
                        Height="47"
                        Margin="20 0"
                        Background="#FFFFFF"
                        BorderThickness="0"
                        CornerRadius="16">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="47">
                                    <Image
                                        Width="35"
                                        Height="35"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="/QuanLiGaraOto;component/Resources/Icon/Search.png" />
                                </Grid>

                                <TextBox
                                    x:Name="searchBox"
                                    Margin="5,0"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    materialDesign:HintAssist.Hint="Tìm kiếm"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="Roboto Condensed"
                                    FontSize="20"
                                    FontWeight="Medium"
                                    Foreground="#353535">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding SearchStaff}" CommandParameter="{Binding ElementName=searchBox}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Button Thêm  -->
                    <Grid Grid.Column="1" Grid.RowSpan="2">
                        <Border
                            Width="151"
                            Height="57"
                            Margin="30,0"
                            materialDesign:ElevationAssist.Elevation="Dp4"
                            Background="White"
                            BorderBrush="DarkGray"
                            BorderThickness="0"
                            CornerRadius="20">

                            <Button
                                Width="151"
                                Height="57"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                materialDesign:ElevationAssist.Elevation="Dp3"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding OpenAddWindowCommand}"
                                CommandParameter="{Binding ElementName=staffPage}">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="30"
                                        Height="30"
                                        Source="/QuanLiGaraOto;component/Resources/Icon/Add.png" />

                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="Roboto Condensed"
                                        FontWeight="Bold"
                                        Foreground="#3093A0">
                                        Thêm
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>

                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Page>
