                                                CornerRadius="16">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked"
                                                     Value="True">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="#FFE0AE8A" />
                                            </Trigger>
                                            <Trigger Property="IsChecked"
                                                     Value="False">
                                                <Setter TargetName="border"
                                                        Property="Background"
                                                        Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </StackPanel.Resources>
                    <Grid Height="64">
                        <StackPanel Margin="0,0,0,8"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand"
                                    Orientation="Horizontal">
